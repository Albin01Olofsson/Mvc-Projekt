@model Models.Message

@{
    ViewData["Title"] = "Läs meddelande";
}

<h2 class="mb-4">Läs meddelande</h2>

<div class="card shadow-sm">
    <div class="card-body">

        <div class="mb-3">
            <span class="text-muted">Från</span>
            <h5 class="mb-0">@Model.SenderName</h5>
        </div>

        <hr />

        <div class="mb-3">
            <p class="mb-0">
                @Model.Content
            </p>
        </div>

        <div class="text-muted small mb-4">
            Skickat: @Model.SentAt.ToString("yyyy-MM-dd HH:mm")
        </div>

        <a asp-controller="Message"
           asp-action="Inbox"
           class="btn btn-outline-secondary">
            ← Tillbaka till inkorgen
        </a>

    </div>
</div>