@model SendMessageViewModel

<h3>
    <i class="bi bi-envelope me-2"></i>Skicka meddelande
    </h3>

<form asp-action="Send" method="post">
    <input asp-for="ReceiverProfileId" type="hidden" />

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="mb-2">
            <label asp-for="SenderName"></label>
            <input asp-for="SenderName" class="form-control" />
            <span asp-validation-for="SenderName" class="text-danger"></span>
        </div>
    }

    <div class="mb-2">
        <label asp-for="Content"></label>
        <textarea asp-for="Content"
                  class="form-control"
                  rows="4"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        Skicka
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}