@model ProjektApp.Viewmodels.EditProfileViewModel

<h1 class="mb-4">Redigera profil</h1>

<form asp-action="Edit"
      method="post"
      enctype="multipart/form-data"
      class="card p-4 shadow-sm">

    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="All"
             class="alert alert-danger"></div>
    }

    <div class="mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName"
               class="form-control" />
        <span asp-validation-for="FullName"
              class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Bio" class="form-label"></label>
        <textarea asp-for="Bio"
                  class="form-control"
                  rows="4"></textarea>
        <span asp-validation-for="Bio"
              class="text-danger"></span>
    </div>

    <div class="form-check mb-4">
        <input asp-for="IsPrivate"
               class="form-check-input" />
        <label asp-for="IsPrivate"
               class="form-check-label">
            Privat profil
        </label>
    </div>

    <div class="mb-4">
        <label asp-for="ProfileImage"
               class="form-label">
            Profilbild
        </label>
        <input asp-for="ProfileImage"
               type="file"
               class="form-control"
               accept="image/*" />
        <span asp-validation-for="ProfileImage"
              class="text-danger"></span>
    </div>

    <div class="d-flex flex-wrap gap-2">
        <button type="submit"
                class="btn btn-primary">
            Spara
        </button>

        <a asp-action="ChangePassword"
           class="btn btn-outline-warning">
            Ändra lösenord
        </a>

        <a asp-action="Details"
           class="btn btn-secondary">
            Avbryt
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


