@model Profile

<div class="container mt-4">
   
    <h1 class="mb-4">
        <i class="bi bi-person-circle me-2"></i>Min profil
    </h1>

    <div class="row mb-4">
        <div class="col-md-4 text-center">
            @if (!string.IsNullOrEmpty(Model?.PictureUrl))
            {
                <img src="@Model.PictureUrl"
                     alt="Profilbild"
                     class="img-fluid rounded mb-3"
                     style="max-width:200px;" />
            }
            else
            {
                <img src="/images/default-profile.png"
                     alt="Ingen profilbild"
                     class="img-fluid rounded mb-3 opacity-75"
                     style="max-width:200px;" />
            }
        </div>

        <div class="col-md-8">
            <p>
                <strong>Email:</strong><br />
                @ViewBag.UserEmail
            </p>

            @if (Model != null)
            {
                <p>
                    <strong>Namn:</strong><br />
                    @Model.FullName
                </p>

                <p>
                    <strong>Bio:</strong><br />
                    @Model.Bio
                </p>

                <p>
                    <strong><i class="bi bi-lock-fill me-2"></i> PrivatProfilstatus:</strong><br />
                    <span class="badge @(Model.IsPrivate ? "bg-secondary" : "bg-success")">
                        @(Model.IsPrivate ? "Privat" : "Offentlig")
                    </span>
                </p>
            }
            else
            {
                <p class="text-muted">
                    Ingen profilinformation tillgänglig.
                </p>
            }
        </div>
    </div>

    <hr />

    <div class="d-flex gap-3">
        <a href="@Url.Action("Edit", "Profile")"
           class="btn btn-outline-primary">
            <i class="bi bi-pencil me-2"></i> Redigera profil
        </a>

        @if (Model?.CV != null)
        {
            <a asp-controller="CV"
               asp-action="Details"
               asp-route-id="@Model.CV.CVId"
               class="btn btn-outline-primary">
                Mitt CV
            </a>

            <a asp-controller="CV"
               asp-action="Edit"
               class="btn btn-outline-secondary ms-2">
                <i class="bi bi-pencil me-2"></i> Redigera CV
            </a>
        }
        else
        {
            <p>Du har inget CV ännu.</p>

            <a asp-controller="CV"
               asp-action="Edit"
               class="btn btn-primary">
                Skapa CV
            </a>
        }
    </div>
   
    <hr />
   
    <h4 class="mb-3">Mina projekt</h4>

    @if (Model.User?.ProjectMembers?.Any() == true)
    {
        <div class="row g-3">
            @foreach (var pm in Model.User.ProjectMembers)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                @pm.Project.Title
                            </h5>

                            <p class="card-text text-muted">
                                @pm.Project.Description
                            </p>
                        </div>

                        <div class="card-footer bg-transparent border-0 text-end">
                            <a asp-controller="Project"
                               asp-action="Details"
                               asp-route-id="@pm.Project.ProjectId"
                               class="btn btn-sm btn-outline-primary">
                                Visa projekt
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-light text-muted">
            Du är inte med i några projekt ännu.
        </div>
    }
</div>