@model Profile

<a asp-controller="Profile"
   asp-action="Details"
   asp-route-id="@Model.UserId">
    Visa profil
</a>


<h1>@Model.FullName:s profilsida</h1>

@if (!string.IsNullOrEmpty(Model.PictureUrl))
{
    <img src="@Model.PictureUrl"
         alt="Profilbild"
         style="max-width:200px;" />
}

<hr />

<p>
    <strong>Bio:</strong><br />
    @Model.Bio
</p>

@if (Model?.CV != null)
{
    <a asp-controller="CV"
       asp-action="Details"
       asp-route-id="@Model.CV.CVId"
       class="btn btn-outline-primary">
        Visa CV
    </a>
}
else
{
    <p class="text-muted">Användaren har inget CV uppladdat.</p>
}

<hr />
<h4 class="mb-3">Projekt</h4>

@if (Model.User.ProjectMembers.Any())
{
    <div class="row g-3">
        @foreach (var pm in Model.User.ProjectMembers)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@pm.Project.Title</h5>
                        <p class="card-text text-muted">
                            @pm.Project.Description
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">
        Användaren är inte med i några projekt.
    </p>
}

