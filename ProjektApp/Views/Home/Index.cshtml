@model ProjektApp.Viewmodels.HomeViewModel

<div class="container mt-4">
   
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="text-center mb-5 p-4 bg-light rounded">
            <h1 class="fw-bold mb-3">Välkommen till CV-portalen</h1>

            <p class="text-muted mb-4">
                Logga in för att se fler CV:n, projekt och kontakta andra användare.
            </p>

            <a asp-controller="Account"
               asp-action="Login"
               class="btn btn-primary btn-lg me-2">
                Logga in
            </a>

            <a asp-controller="Account"
               asp-action="Register"
               class="btn btn-outline-secondary btn-lg">
                Registrera dig
            </a>
        </div>

    }


     
   
    
    <!-- Rubrik -->
    <div class="text-center mb-5">
        <h1 class="fw-bold">CV-portalen</h1>
        <p class="text-muted">
            Utforska CV:n, profiler och projekt
        </p>
    </div>

    <!-- ================= CV-SECTION ================= -->
    <h2 class="mb-4">Registrerade CV</h2>

    @if (Model.CVs.Any())
    {
        <div class="row">
            @foreach (var cv in Model.CVs)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">CV</h5>

                            <p class="card-text">
                                <strong>Utbildning</strong><br />
                                @cv.Education
                            </p>

                            <p class="card-text">
                                <strong>Erfarenhet</strong><br />
                                @cv.Experience
                            </p>

                            <div class="mt-auto">
                                <a asp-controller="Profile"
                                   asp-action="Details"
                                   asp-route-id="@cv.Profile.UserId"
                                   class="btn btn-primary btn-sm w-100">
                                    Visa profil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">Inga CV:n att visa just nu.</p>
    }
    <!-- ================= SEARCH ================= -->
    <hr class="my-5" />
    <form method="get"
          asp-controller="Home"
          asp-action="Index"
          class="mb-4">

        <div class="input-group">
            <input type="text"
                   name="search"
                   value="@ViewBag.Search"
                   class="form-control"
                   placeholder="Sök efter namn..." />

            <button type="submit"
                    class="btn btn-primary">
                Sök
            </button>
        </div>
    </form>
    <!-- ================= PROFILES ================= -->
    <hr class="my-5" />

    <h2 class="mb-4">Publika profiler</h2>

    @if (Model.PublicProfiles.Any())
    {
        <div class="row">
            @foreach (var profile in Model.PublicProfiles)
            {
                <div class="col-md-3 mb-3">
                    <div class="border rounded p-3 h-100 bg-light">
                        <strong>@profile.FullName</strong>
                        <p class="text-muted small mb-2">
                            @profile.Bio
                        </p>

                        <a asp-controller="Profile"
                           asp-action="Details"
                           asp-route-id="@profile.UserId"  
                           class="btn btn-outline-secondary btn-sm">
                            Visa profil
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">Inga publika profiler hittades.</p>
    }

    <!-- ================= PROJECTS ================= -->
    <hr class="my-5" />

    <h2 class="mb-4">Senaste projekt</h2>

    @if (Model.LatestProjects.Any())
    {
        @foreach (var project in Model.LatestProjects)
        {
            <div class="border rounded p-3 mb-3 bg-light">
                <h5 class="mb-1">@project.Title</h5>
                <p class="text-muted mb-2">
                    @project.Description
                </p>

                <a asp-controller="Project"
                   asp-action="Details"
                   asp-route-id="@project.ProjectId"
                   class="btn btn-sm btn-outline-primary">
                    Visa projekt
                </a>
            </div>
        }
    }
    else
    {
        <p class="text-muted">Inga projekt har lagts till ännu.</p>
    }

</div>