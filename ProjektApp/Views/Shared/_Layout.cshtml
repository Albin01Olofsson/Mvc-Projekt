@inject DAL.Context _context
@using Microsoft.AspNetCore.Identity
@inject UserManager<Models.User> UserManager

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjektApp</title>

    <!-- Bootstrap 5 (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjektApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm mb-4">
            <div class="container">

                <!-- LOGO / TITEL -->
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    CV-portalen
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- VÄNSTER MENY -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                Start
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Profile" asp-action="Index">
                                <i class="bi bi-people me-1"></i>Profiler
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Project" asp-action="Index">
                                <i class="bi bi-folder me-1"></i> Projekt
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Profile" asp-action="MyProfile">
                                    <i class="bi bi-person me-1"></i> Min profil
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="CV" asp-action="Edit">
                                    <i class="bi bi-file-earmark-text me-1"></i>Mitt CV
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- HÖGER MENY (LOGIN / LOGOUT) och inkorg -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            var userId = UserManager.GetUserId(User);
                            var unreadCount = _context.Messages
                            .Count(m => m.ReceiverId == userId && !m.IsRead);

                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center gap-1"
                                   asp-controller="Message"
                                   asp-action="Inbox">

                                    @if (unreadCount > 0)
                                    {
                                        <i class="bi bi-envelope-fill text-danger"></i>
                                        <span class="badge bg-danger">@unreadCount</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-envelope-open"></i>
                                    }

                                    Inkorg
                                </a>
                            </li>

                            <li class="nav-item">
                                <span class="nav-link text-muted">
                                    Inloggad som @User.Identity.Name
                                </span>
                            </li>

                            <li class="nav-item">
                                <form asp-controller="Account"
                                      asp-action="Logout"
                                      method="post">
                                    <button class="btn btn-link nav-link">
                                        Logga ut
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link"
                                   asp-controller="Account"
                                   asp-action="Login">
                                    Logga in
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="btn btn-primary ms-2"
                                   asp-controller="Account"
                                   asp-action="Register">
                                    Registrera
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>

                   
                
            
        
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - ProjektApp -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>