@model EditCVViewModel

<h1 class="mb-4">Redigera CV</h1>

<form asp-action="Edit" method="post" class="card p-4 shadow-sm">
    <input type="hidden" asp-for="CVId" />

    <!-- Sammanfattning av fel -->
    <div asp-validation-summary="All" class="alert alert-danger"></div>

    <div class="mb-3">
        <label asp-for="Education" class="form-label"></label>
        <textarea asp-for="Education"
                  class="form-control"
                  rows="4"></textarea>
        <span asp-validation-for="Education"
              class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Experience" class="form-label"></label>
        <textarea asp-for="Experience"
                  class="form-control"
                  rows="4"></textarea>
        <span asp-validation-for="Experience"
              class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Skills" class="form-label"></label>
        <input asp-for="Skills"
               class="form-control" />
        <span asp-validation-for="Skills"
              class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">
            Spara
        </button>

        <a asp-action="Details"
           class="btn btn-secondary">
            Avbryt
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}